<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191C27"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen Track"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- App Usage Section Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAppUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#242B3A"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/headerTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Date & Calendar Controls -->
                    <TextView
                        android:id="@+id/tvAppUsageTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Usage"
                        android:textColor="#ABB2BF"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday, September 5"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_below="@id/tvAppUsageTitle"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true" />

                    <ImageButton
                        android:id="@+id/btnPrevDate"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignTop="@id/tvDate"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/tvDate"
                        android:background="?selectableItemBackgroundBorderless"
                        app:tint="#A0A6B6"
                        android:src="@android:drawable/ic_media_previous"
                        android:contentDescription="Previous Date" />

                    <ImageButton
                        android:id="@+id/btnNextDate"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignTop="@id/tvDate"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/tvDate"
                        android:background="?selectableItemBackgroundBorderless"
                        app:tint="#A0A6B6"
                        android:src="@android:drawable/ic_media_next"
                        android:contentDescription="Next Date" />

                    <ImageButton
                        android:id="@+id/btnCalendar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignTop="@id/tvDate"
                        android:layout_alignParentEnd="true"
                        android:background="?selectableItemBackgroundBorderless"
                        app:tint="#A0A6B6"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:contentDescription="Select Date" />

                    <!-- Circular Usage Chart -->
                    <FrameLayout
                        android:id="@+id/circleChartContainer"
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:layout_below="@id/tvDate"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:layout_centerHorizontal="true">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pieChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                        <TextView
                            android:id="@+id/tvTotalUsage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total\n6h 23m"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center" />

                    </FrameLayout>

                    <!-- Legend / App usage details -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAppUsage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/circleChartContainer"
                        android:layout_marginTop="8dp"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Device Breakdown Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDeviceBreakdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#242B3A"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardAppUsage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tvDeviceBreakdownTitle"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Device Breakdown"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/deviceViewSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="8dp"
                            app:cardBackgroundColor="#2358FF"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/btnListView"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:background="?selectableItemBackgroundBorderless"
                                    app:tint="#FFFFFF"
                                    android:src="@android:drawable/ic_menu_agenda"
                                    android:contentDescription="List View" />

                                <ImageButton
                                    android:id="@+id/btnGridView"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:background="?selectableItemBackgroundBorderless"
                                    app:tint="#98A4C6"
                                    android:src="@android:drawable/ic_menu_manage"
                                    android:contentDescription="Grid View" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#313949"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Device Items -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDeviceUsage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Daily Activity Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDailyActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="50dp"
                app:cardBackgroundColor="#242B3A"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardDeviceBreakdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvDailyActivityTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Daily Activity"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btnEditActivities"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Edit Activities"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#2358FF"
                            android:drawableStart="@android:drawable/ic_menu_edit"
                            android:drawablePadding="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="18dp"
                            android:elevation="4dp"
                            style="@style/Widget.MaterialComponents.Button"
                            />
                    </LinearLayout>

                    <!-- Color bar time indicator -->
                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="16dp"
                        android:padding="8dp"/>

                    <!-- Time Labels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="8"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="12am"
                            android:textColor="#ABB2BF"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="3am"
                            android:textColor="#ABB2BF"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="6am"
                            android:textColor="#ABB2BF"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="9am"
                            android:textColor="#ABB2BF"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="12pm"
                            android:textColor="#ABB2BF"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="3pm"
                            android:textColor="#ABB2BF"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="6pm"
                            android:textColor="#ABB2BF"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="9pm"
                            android:textColor="#ABB2BF"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <!-- Dropdown arrow beneath -->
                    <ImageButton
                        android:id="@+id/btnDropdown"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#ABB2BF"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_gravity="start"
                        android:layout_marginTop="8dp"
                        android:contentDescription="Expand/Collapse" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Activity List Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardActivityList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="50dp"
                app:cardBackgroundColor="#242B3A"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardDailyActivity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvActivityListTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity List"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvActivityList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar with modern styling -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#242B3A"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemIconSize="24dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:elevation="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>